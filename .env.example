# =============================================================================
# Environment Variables for ChatBot Doc Search Application
# Copy this file to .env and update the values as needed
# =============================================================================

# FastAPI Settings
FASTAPI_HOST=localhost
FASTAPI_PORT=8000
FASTAPI_DEBUG=true
FASTAPI_RELOAD=true
RESTAPI_PREFIX=/api/v1
WEB_PREFIX=

# Document Files Settings
DATA_FOLDER_RAW=data/raw
DATA_FOLDER_PROCESSED=data/processed

# PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname

# Database Tables Settings
DB_TABLE_FILES=documents_meta
DB_TABLE_EMBEDDINGS=documents_embeddings

# Embedding Model Settings
EMBEDDING_MODEL=cohere

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(levelname)s - %(message)s
LOG_FILE_PATH=app.log
LOG_IMPORTANT_FILE_PATH=warnings.log
LOG_TESTING=false
